@model restaurant.Models.Restaurant

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit" class="bg-light p-4 rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Restaurant Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label" style="color: #002D62;"></label>
                <input asp-for="Name" class="form-control" style="border-color: #002D62;" placeholder="Enter restaurant name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label" style="color: #002D62;"></label>
                <input asp-for="Address" class="form-control" style="border-color: #002D62;" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label" style="color: #002D62;"></label>
                <input asp-for="Phone" class="form-control" style="border-color: #002D62;" placeholder="Enter phone number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label" style="color: #002D62;"></label>
                <input asp-for="Email" class="form-control" style="border-color: #002D62;" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Opening Hours -->
            <div class="form-group mb-3">
                <label asp-for="OpeningHours" class="control-label" style="color: #002D62;"></label>
                <input asp-for="OpeningHours" class="form-control" style="border-color: #002D62;" placeholder="Enter opening hours" />
                <span asp-validation-for="OpeningHours" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-lg" style="background-color: #002D62; color: white; border-color: #002D62;" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-outline-dark" style="color: #002D62;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
