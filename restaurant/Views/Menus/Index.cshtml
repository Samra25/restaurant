@model IEnumerable<restaurant.Models.Menu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead style="background-color: #002D62; color: white;">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Restaurant)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Restaurant.Id)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #FFC107; color: black;">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #17A2B8; color: white;">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #DC3545; color: white;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
