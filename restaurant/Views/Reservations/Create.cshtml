@model restaurant.Models.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header" style="background-color: #002D62; color: white;">
        <h4 class="mb-0">Reservation Details</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Customer Name -->
            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label" style="color: #002D62;">Customer Name</label>
                <input asp-for="CustomerName" class="form-control" placeholder="Enter Customer Name" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <!-- Customer Phone -->
            <div class="mb-3">
                <label asp-for="CustomerPhone" class="form-label" style="color: #002D62;">Customer Phone</label>
                <input asp-for="CustomerPhone" class="form-control" placeholder="Enter Customer Phone" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
            </div>

            <!-- Reservation Date -->
            <div class="mb-3">
                <label asp-for="ReservationDate" class="form-label" style="color: #002D62;">Reservation Date</label>
                <input asp-for="ReservationDate" class="form-control" placeholder="Select Reservation Date" type="datetime-local" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>

            <!-- Number of Guests -->
            <div class="mb-3">
                <label asp-for="NumberOfGuests" class="form-label" style="color: #002D62;">Number of Guests</label>
                <input asp-for="NumberOfGuests" class="form-control" placeholder="Enter Number of Guests" type="number" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>

            <!-- Restaurant Dropdown -->
            <div class="mb-3">
                <label asp-for="RestaurantId" class="form-label" style="color: #002D62;">Restaurant</label>
                <select asp-for="RestaurantId" class="form-control" asp-items="ViewBag.RestaurantId">
                    <option value="">Select Restaurant</option>
                </select>
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-lg" style="background-color: #002D62; color: white;">Create</button>
            </div>
        </form>
    </div>
    <div class="card-footer text-end">
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
